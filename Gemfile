source 'http://rubygems.org'

gem 'rails', '3.0.0.beta4'

# Use Sqlite3 as Database
gem 'sqlite3-ruby', :require => 'sqlite3'

# Use Mongrel as the web server
gem 'mongrel', '>= 1.2.0.pre2'

# Use Warden & Devise for authentication
gem 'warden', '>= 0.10.7'
gem 'devise', '>= 1.1.rc2'

# Use Less CSS + More (Less Rails Wrapper) for fancy CSS stuff
gem 'less'
# gem 'more' # more is installed as plugin

# Use Paperclip for image uploads
gem 'paperclip'

# Use MetaWhere to ban SQL from source code 
# Future.where :sql.not_in => ['code']
gem 'meta_where'

# Use CanCan for managing Permissions
gem 'cancan'

# Use oembed_links to format user text
gem 'oembed_links'

# Use redcloth for textilize method
gem 'RedCloth'

# Use debugger
gem 'ruby-debug'