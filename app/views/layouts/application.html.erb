<header class="container_24">

	<div class="grid_6">
		<div id="site-button">
			<a href="http://bau-ha.us/">
			<%= image_tag 'bau_haus-sitebutton-grey-23px.png', :id=>"site-img" %>
			</a>
		</div>
		<h1 id="site-title">
			<%= link_to 'Katalog', root_path %>
		</h1>
	</div>

	<div id="access" role="navigation" class="grid_12 menu">
		<ul>
			<li class="menu-item <%= 'menu-item-current' if controller_name == 'things' %>">
				<%= link_to 'Things', things_path %>
			</li>
			<li class="menu-item <%= 'menu-item-current' if controller_name == 'people' %>">
				<%= link_to 'People', people_path %>
			</li>
			<li class="menu-item <%= 'menu-item-current' if controller_name == 'study_modules' %>">
				<%= link_to 'Study', study_modules_path %>
			</li>
		</ul>
	</div>
	
	<div id="user" class="grid_6 menu">
		<% if user_signed_in? -%>
			<span>Hello, <span class="username"><%= link_to current_user.username, edit_user_registration_path %>!</span>
			<%= link_to 'Log out', destroy_user_session_path %></span> 
		<% else -%>
			<span><%= link_to 'Log in', new_user_session_path %> or
			<%= link_to 'Register', new_user_registration_path %> </span>
		<% end -%>
	</div>
	
</header> <!-- end header -->
<div class="clear"></div>

<div id="page" class="container_24">
	
	<div id="main" class="grid_18">
		<% flash.each do |name, msg| -%>
			<%= content_tag :div, msg, :class => "", :id => "flash_#{name}" %>
			<div class="clear"></div>
		<% end -%>
	
		<div class="entry">
			<%= yield %>
		</div>
		<div class="clear"></div>
	</div> <!-- end #main -->
	
	<div id="side" class="grid_6">
		<div id="side-content">
			<%= yield :sidebar %>
		</div><!-- end #side-content -->
	</div><!-- end #side -->
	
</div> <!-- end #page -->
<div class="clear"></div>
	
