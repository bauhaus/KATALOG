<h1>
  <%= @thing.title %>
</h1>

<p>
	<%= @thing.description %>
</p>

<p>
	<h2>Credits</h2>
	<% @thing.credits.each do |credit| -%>
		<%= credit.role.capitalize %> â€” <%= link_to credit.person.full_name, person_path(credit.person) %><br />
	<% end -%>
</p>

<p>
	<h2>Gallery</h2>
	<% @thing.images.each do |image| -%>
		<%= link_to image_tag(image.data.url(:thumb)), image.data.url(:large), :rel => 'lightbox[gallery]' %>
	<% end -%>
</p>

<p>
	<h2>License</h2>
	<%= @thing.license %>
</p>

<% if user_signed_in? -%>
<div id="controls">
	<%= link_to 'Edit', edit_thing_path(@thing) %>
	<%= link_to 'Delete', @thing, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end -%>